<local:EntityWindow x:TypeArguments="local:Service"
        x:Class="AutoFix.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoFix"
        mc:Ignorable="d"
        Title="Услуга" Width="150" SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5">
        <TextBlock>Название</TextBlock>
        <TextBox Margin="0 0 0 5" Text="{Binding Name}" />

        <TextBlock>Стоимость</TextBlock>
        <local:NumberBox Margin="0 0 0 5" Text="{Binding Price}" />

        <Button Padding="3" HorizontalAlignment="Center" Click="SaveButton_Click">Сохранить</Button>
    </StackPanel>
</local:EntityWindow>
