<Window x:Class="AutoFix.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoFix"
        mc:Ignorable="d"
        Title="АвтоРемонт" SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" KeyDown="LoginWindow_KeyDown">
    <StackPanel Margin="20 0" Width="250" FocusManager.FocusedElement="{Binding ElementName=username}">
        <TextBlock FontSize="24" HorizontalAlignment="Center" Margin="20">Вход</TextBlock>
        
        <TextBlock FontSize="20">Имя пользователя</TextBlock>
        <TextBox x:Name="username" FontSize="16" Margin="0 10" />

        <TextBlock FontSize="20">Пароль</TextBlock>
        <PasswordBox x:Name="password" FontSize="16" Margin="0 10" />

        <Button Margin="20" Padding="10" FontSize="16" Click="LoginButton_Click">Войти</Button>
    </StackPanel>
</Window>
